<%- include('../partials/navbar') %>

<div class="container mt-5">
  <h2 class="mb-4 text-center">ðŸ”¥ Trending Recipes</h2>
  <div class="row">
    <% trendingRecipes.forEach(recipe => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= recipe.title %></h5>
            <p class="card-text">Category: <%= recipe.category %></p>
            <p class="card-text">
              Favorites: <%= recipe.favoritesCount %><br>
              Reviews: <%= recipe.reviewsCount %><br>
              Avg Rating: <%= recipe.avgRating.toFixed(1) %>
            </p>
            <a href="/recipes/<%= recipe._id %>" class="btn btn-primary">View Details</a>

          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

