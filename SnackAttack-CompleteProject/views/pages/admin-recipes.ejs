<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SnackAttack</title>
  <link rel="stylesheet" href="/css/styles.css"> <!-- Include your CSS here -->
</head>
<body>
  <%- include('../partials/navbar') %>

<div class="container mt-5">
  <h2>Manage Recipes</h2>
  <a href="/recipes/new" class="btn btn-success mb-3">+ Add New Recipe</a>

  <table class="table table-striped">
    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Category</th>
        <th>Calories</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% recipes.forEach(recipe => { %>
        <tr>
          <td><%= recipe.title %></td>
          <td><%= recipe.category %></td>
          <td><%= recipe.nutritionalInfo.calories %></td>
          <td>
            <a href="/recipes/<%= recipe._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
            <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST" class="d-inline">
              <button class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>
