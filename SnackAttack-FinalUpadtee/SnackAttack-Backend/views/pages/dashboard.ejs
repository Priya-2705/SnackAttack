<%- include('../partials/navbar') %>

<div class="container-fluid mt-4">
  <div class="row">
    <% if (user.role === 'admin') { %>
      <div class="col-md-3">
        <div class="list-group">
          <a href="/dashboard" class="list-group-item list-group-item-action active">Dashboard</a>
          <a href="/admin/users" class="list-group-item list-group-item-action">Manage Users</a>
          <a href="/admin/recipes" class="list-group-item list-group-item-action">Manage Recipes</a>
          <a href="/trending" class="list-group-item list-group-item-action">Trending Recipes</a>
        </div>
      </div>
    <% } %>

    <div class="<%= user.role === 'admin' ? 'col-md-9' : 'col-md-12' %>">
      <h2>Welcome, <%= user.username %>!</h2>
      <p>You are logged in as <strong><%= user.role %></strong>.</p>

      <% if (user.role !== 'admin') { %>
        <a href="/recipes" class="btn btn-outline-primary mt-3">Browse Recipes</a>
        <a href="/favorites" class="btn btn-outline-success mt-3">Your Favorites</a>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
