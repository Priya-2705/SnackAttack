<%- include('../partials/navbar') %>
<%- include('../partials/content-wrapper') %>
<div class="container mt-5" style="margin-top: auto;"> <!-- Add margin-top: auto -->
  <h2 class="text-center mb-4">Your Favorite Recipes</h2>
  <div class="row">
    <% favorites.forEach(fav => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 favorite-card"> <!-- Add favorite-card class -->
          <div class="card-body">
            <h5 class="card-title"><%= fav.recipe.title %></h5>
            <p class="card-text">Category: <%= fav.recipe.category %></p>
            <div class="d-flex gap-2"> <!-- Add flex container for buttons -->
              <a href="/recipes/<%= fav.recipe._id %>" class="btn btn-primary btn-sm">View</a>
              <form action="/favorites/<%= fav._id %>?_method=DELETE" method="POST" class="d-inline">
                <button class="btn btn-danger btn-sm hover-grow">Remove</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include('../partials/content-wrapper-end') %>
<%- include('../partials/footer') %>