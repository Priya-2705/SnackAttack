<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SnackAttack</title>
  <link rel="stylesheet" href="/css/styles.css"> <!-- Include your CSS here -->
</head>
<body>
  <%- include('../partials/navbar') %>
  <%- include('../partials/content-wrapper') %>

<div class="container mt-5">
  <h2 class="text-center mb-4">Trending Recipes</h2>
  <div class="row">
    <% trendingRecipes.forEach(recipe => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= recipe.title %></h5>
            <p class="card-text">Category: <%= recipe.category %></p>
            <p class="card-text">Calories: <%= recipe.nutritionalInfo.calories %></p>
            <a href="/recipes/<%= recipe._id %>" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<!-- In your home.ejs file -->
<section class="latest-recipes section">
  <div class="container">
    <h2 class="section-title">Latest Recipes</h2>
    <div class="row">
      <% latestRecipes.forEach(recipe => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= recipe.title %></h5>
              <p class="card-text">Category: <%= recipe.category %></p>
              <p class="card-text">Calories: <%= recipe.nutritionalInfo.calories %></p>
              <a href="/recipes/<%= recipe._id %>" class="btn btn-primary">View Recipe</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<%- include('../partials/content-wrapper-end') %>
<%- include('../partials/footer') %>
